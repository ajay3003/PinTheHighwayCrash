  "Geo": {
    "MaxDistanceMeters": 150,
    "RequireGpsFix": true,
    "GeolocationTimeoutMs": 15000,
    "MinAccuracyMeters": 60,
    "OnRoadVerification": {
      "Enabled": true,
      "Provider": "Nominatim",
      "MaxRoadDistanceMeters": 60,
      "NominatimReverseUrl": "https://nominatim.openstreetmap.org/reverse",
      "NominatimEmail": "your-contact-email@example.com"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "Enable": true,
      "Level": "Debug"
    }
  },

  "FeatureFlags": {
    "ShowHealthPage": true,
    "ShowDebugPanel": false
  }
