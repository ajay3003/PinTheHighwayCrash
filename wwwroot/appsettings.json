{
  "Emergency": {
    "Country": "IN",
    "Phone": "112",
    "WhatsAppNumber": "+911234567890",
    "Email": "controlroom@example.in",
    "EmailSubject": "EMERGENCY: Highway accident",
    "SmsIntro": "EMERGENCY: Highway accident reported",
    "EnableCall": true,
    "EnableSms": true,
    "EnableWhatsApp": true,
    "EnableEmail": true
